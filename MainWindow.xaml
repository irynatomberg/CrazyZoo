<Window x:Class="CrazyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrazyZoo"
        mc:Ignorable="d"
        Title="Loomade maailm" Height="550" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Loomad" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Margin="5">
            <StackPanel>
                <ListBox x:Name="AnimalList" Height="230" DisplayMemberPath="Name"
                         SelectionChanged="AnimalList_SelectionChanged"/>

                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Uue looma lisamine:" FontWeight="Bold" Margin="0,5,0,5"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                        <TextBlock Text="Liik:"/>
                        <ComboBox x:Name="TypeCombo" SelectedIndex="0" Margin="0,2,0,5">
                            <ComboBoxItem Content="Kass"/>
                            <ComboBoxItem Content="Koer"/>
                            <ComboBoxItem Content="Lind"/>
                        </ComboBox>

                        <TextBlock Text="Nimi:"/>
                        <TextBox x:Name="NameInput" Margin="0,2,0,5"/>

                        <TextBlock Text="Vanus:"/>
                        <TextBox x:Name="AgeInput" Margin="0,2,0,5"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Lisa loom" Click="AddAnimal_Click" Width="100" Margin="5,0"/>
                        <Button Content="Eemalda loom" Click="RemoveAnimal_Click" Width="110" Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Detailid" Grid.Column="1" Grid.Row="0" Margin="5">
            <StackPanel>
                <TextBlock Text="Nimi:" FontWeight="Bold"/>
                <TextBlock x:Name="NameText"/>
                <TextBlock Text="Vanus:" FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBlock x:Name="AgeText"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Button Content="Tee hääl" Click="MakeSound_Click" Width="90" Margin="5"/>
            <StackPanel Orientation="Vertical" Margin="5,0">
                <TextBlock Text="Toit:"/>
                <TextBox x:Name="FoodInput" Width="120"/>
            </StackPanel>
            <Button Content="Toida" Click="Feed_Click" Width="90" Margin="5"/>
            <Button Content="Hullu tegu" Click="CrazyAction_Click" Width="100" Margin="5"/>
        </StackPanel>

        <GroupBox Header="Logi" Grid.Column="1" Grid.Row="2" Margin="5">
            <TextBox x:Name="LogBox" Height="315" IsReadOnly="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </GroupBox>
    </Grid>
</Window>
